@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">¡Lo sentimos, ha ocurrido un error!</h1>
<h2 class="text-danger">Algo salió mal mientras procesábamos tu solicitud.</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>ID de la solicitud:</strong> <code>@Model.RequestId</code>
    </p>
}

<p>Si el problema persiste, por favor contacta con el soporte técnico y proporciona el ID de la solicitud.</p>
<a href="@Url.Action("Index", "Home")" class="btn btn-primary">Volver al inicio</a>
