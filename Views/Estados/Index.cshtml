@model IEnumerable<WebAppLibros.Models.Estado>

@{
    ViewData["Title"] = "Index";
}

<h1>ESTADO DE LIBROS</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Condición)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Condición)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdEstado">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdEstado">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdEstado">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
